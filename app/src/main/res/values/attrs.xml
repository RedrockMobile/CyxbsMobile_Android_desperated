<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="red_viewpager">
        <attr name="hint_mode">
            <enum name="point" value="0"/>
            <enum name="number" value="1"/>
        </attr>
        <attr name="hint_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="auto_play" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="multi_suppout" format="boolean"/>
        <attr name="max_select" format="integer"/>
    </declare-styleable>
    <declare-styleable name="Toolbar">
        <attr name="text_title" format="string"/>
        <attr name="text_left" format="string"/>
        <attr name="text_right" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="BaseBanner">
        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color"/>
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference"/>
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension"/>
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension"/>
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension"/>
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_horizontal" value="0x01"/>
        </attr>
        <!-- 是否开启自动轮播 -->
        <attr name="banner_pointAutoPlayAble" format="boolean"/>
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer"/>
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer"/>
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color"/>
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TextDrawableView">
        <attr name="drawable_width" format="dimension"/>
        <attr name="drawable_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BottomButton">
        <attr name="button_text" format="string"/>
        <attr name="button_text_size" format="dimension"/>
        <attr name="button_text_color_normal" format="color"/>
        <attr name="button_text_color_choose" format="color"/>
        <attr name="button_image_normal" format="reference"/>
        <attr name="button_image_choose" format="reference"/>
        <attr name="button_image_color_normal" format="color"/>
        <attr name="button_image_color_choose" format="color"/>
        <attr name="button_text_image_margin" format="dimension"/>
        <attr name="color_choose" format="color"/>
        <attr name="color_normal" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextLimitButton">
        <attr name="min_text_length" format="integer"/>
        <attr name="limit_background_color" format="color"/>
        <attr name="free_background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="RollerView">
        <attr name="pageMargin" format="dimension"/>
        <attr name="EdgePageSize" format="dimension"/>
        <attr name="pageScale" format="float"/>
        <attr name="aspectRatio" format="float"/>
        <attr name="showMultiPage" format="boolean"/>
        <attr name="delay" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RatioLayout">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="ExploreItem">
        <attr name="icon" format="reference"/>
        <attr name="title" format="string"/>
    </declare-styleable>

    <declare-styleable name="MultiSelector">
        <attr name="max_num" format="integer"/>
        <attr name="min_num" format="integer"/>
        <attr name="values" format="reference"/>
        <attr name="display_values" format="reference"/>
        <attr name="radio_button_mode" format="boolean"/>
    </declare-styleable>
</resources>