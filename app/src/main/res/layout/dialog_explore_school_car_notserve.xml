<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="325dp"
    android:id="@+id/school_car_dialog_relative">

    <ImageButton
        android:id="@+id/school_car_dialog_dismiss_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <ImageButton
        android:id="@+id/school_car_dialog_negative_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="#00000000"
        android:layout_toLeftOf="@+id/school_car_dialog_positive_button"
        android:layout_toStartOf="@+id/school_car_dialog_positive_button" />

    <ImageButton
        android:id="@+id/school_car_dialog_positive_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_alignTop="@+id/school_car_dialog_negative_button"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp" />
</RelativeLayout>