<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mredrock.cyxbs.ui.activity.explore.SchoolCarLearnMore">

    <View
        android:id="@+id/learn_more_school_car_statusbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/explore_school_car_toobar"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/learn_more_school_car_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/learn_more_school_car_statusbar"
        android:background="@color/explore_school_car_toobar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/learn_more_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_school_car_search_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/explore_schoolcar_toolbar_learnmore"
                android:layout_marginLeft="106dp"
                android:layout_marginStart="106dp"
                android:layout_toEndOf="@+id/learn_more_toolbar_back"
                android:layout_toRightOf="@+id/learn_more_toolbar_back"
                android:text="提示"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/explore_schoolcar_toolbar_learnmore"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#00000000"
                android:layout_marginLeft="315dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/ic_school_car_search_tool_more" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/learn_more_school_car_toolbar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_school_car_search_prompt"
        android:scaleType="centerCrop"/>
    </RelativeLayout>
</RelativeLayout>
