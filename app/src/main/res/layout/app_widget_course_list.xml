<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/bg_app_widget"
                android:layout_gravity="top"
                android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/tv_app_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:text="@string/cyxbsmobile"
        android:textColor="#44a2ff"
        android:textSize="@dimen/app_text_size_large" />

    <ListView
        android:id="@+id/lv_app_widget_course_list"
        android:layout_below="@id/tv_app_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:divider="@color/transparent"
        android:foreground="@android:color/transparent"
        android:listSelector="@android:color/transparent"/>

</RelativeLayout>