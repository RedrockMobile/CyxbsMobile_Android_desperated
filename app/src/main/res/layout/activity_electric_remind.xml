<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="#fbfeff"
              android:orientation="vertical"
              tools:context="com.mredrock.cyxbs.ui.activity.explore.electric.ElectricRemindActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/electric_remind_back" />
        <include layout="@layout/toolbar_electric"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:gravity="center"
        android:textSize="18sp"
        android:text="请输入一个最低电费提醒值"/>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/iv_electric_remind_money"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_money"/>
        <EditText
            android:id="@+id/et_electric_remind_money"
            android:paddingLeft="5dp"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:textColor="#12d0ff"
            android:maxLines="1"
            android:maxLength="5"
            android:paddingBottom="0dp"
            android:inputType="numberDecimal"
            android:textSize="50sp"
            android:layout_toRightOf="@id/iv_electric_remind_money"/>
    </RelativeLayout>

    <ImageView

        android:id="@+id/iv_electric_remind_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@drawable/btn_electric_remind_bg" />
</LinearLayout>
