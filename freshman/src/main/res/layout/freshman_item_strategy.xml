<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.freshman.ui.widget.JCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shadowRadius="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/vp_strategy"
            android:layout_centerHorizontal="true"
            tools:layout_height="20dp"
            tools:background="#999" />

        <ImageView
            android:id="@+id/iv_index_point"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/freshman_ic_point_white"
            android:layout_margin="@dimen/dp_4"
            android:layout_alignTop="@id/ll_point"
            android:layout_alignBottom="@id/ll_point"
            android:layout_alignLeft="@+id/ll_point"
            android:layout_alignStart="@id/ll_point" />

        <TextView
            android:id="@+id/tv_describe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vp_strategy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_18"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/freshman_strategy_describe"
            tools:text="新疆大盘鸡" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textColor="#fff"
            android:background="@drawable/freshman_tag_cate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="5dp"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:visibility="gone"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_describe_money_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vp_strategy"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_18"
            android:visibility="gone"
            android:textColor="@color/freshman_strategy_describe_money"
            tools:text="￥54（人）" />

        <TextView
            android:id="@+id/tv_describe_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_describe_name"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:lineSpacingExtra="@dimen/dp_6"
            android:textColor="@color/freshman_strategy_describe_light"
            tools:text="受好评理由、地理位置，受好评理由地理位好评理有 由、地理位置，受好评理由、地理位置受好评理由用 地理位置受好评理由、地理位置受" />

    </RelativeLayout>

</com.mredrock.cyxbs.freshman.ui.widget.JCardView>