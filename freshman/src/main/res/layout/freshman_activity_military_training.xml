<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/freshman_include_toolbar"
        android:id="@+id/toolbar" />

    <com.mredrock.cyxbs.freshman.ui.widget.JCardView
        android:id="@+id/card"
        app:hideRightShadow="true"
        app:hideLeftShadow="true"
        app:hideTopShadow="true"
        app:hideBottomShadow="true"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/freshman_military_tl"
            app:tabSelectedTextColor="#54ACFF"
            app:tabTextColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.mredrock.cyxbs.freshman.ui.widget.JCardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/freshman_military_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card" />

</RelativeLayout>