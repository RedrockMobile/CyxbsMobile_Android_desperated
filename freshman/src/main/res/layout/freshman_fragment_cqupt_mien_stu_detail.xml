<?xml version="1.0" encoding="utf-8"?>
<com.gigamole.library.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:sl_shadow_angle="60"
    app:sl_shadow_color="#E0E0E0"
    app:sl_shadow_distance="4dp"
    app:sl_shadow_radius="10dp"
    app:sl_shadowed="true">

    <ScrollView
        android:scrollbars="none"
        android:background="@drawable/freshman_shape_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/freshman_CyMien_detail_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/freshman_CyMien_detail_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:riv_corner_radius="6dp" />


            <TextView
                android:id="@+id/freshman_CyMien_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/freshman_CyMien_detail_desc"
                android:autoLink="web|email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/freshman_CyMien_detail_seeMore"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/freshman_icon_report_more" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
</com.gigamole.library.ShadowLayout>