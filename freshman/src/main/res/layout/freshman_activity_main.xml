                app:layout_constraintVertical_bias="0.667"
                tools:src="@drawable/freshman_building_mien" />

            <ImageView
                android:id="@+id/freshman_building_process4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBuildingClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.967"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.734"
                tools:src="@drawable/freshman_building_process_unlock" />

            <ImageView
                android:id="@+id/freshman_building_words5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBuildingClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.946"
                tools:src="@drawable/freshman_building_words_unlock" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</ScrollView>