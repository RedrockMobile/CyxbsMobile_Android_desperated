<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.freshman.ui.widget.JCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:radius="5dp"
    app:shadowRadius="8dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_report_real"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:paddingRight="8dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="5dp"
                tools:src="@drawable/freshman_preload_img"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_report_map"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:paddingLeft="8dp"
                app:riv_corner_radius="5dp"
                tools:src="@drawable/freshman_preload_img"
                android:paddingStart="8dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_report_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:layout_marginTop="20dp"
            android:textColor="#cc010100"
            android:textSize="16sp"
            tools:text="体育馆" />

        <TextView
            android:id="@+id/tv_report_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_report_location"
            android:layout_alignBottom="@id/tv_report_location"
            tools:text="(步骤一)"
            android:layout_toEndOf="@id/tv_report_location"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tv_report_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@id/tv_report_location"
            android:textColor="#b3000000"
            android:maxLines="4"
            android:textSize="14sp"
            tools:text="具体报名流程，什么步骤等等等具体报名流程，什么步骤等等等具体报名流程，什么步骤等等等具体报名流程，什么步骤等等等具体报名流程，什么步骤等等等具体报名流程，什么步骤等等等耶等具体报名流程" />

        <ImageView
            android:id="@+id/iv_report_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_report_context"
            android:paddingTop="23dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/freshman_icon_report_more"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</com.mredrock.cyxbs.freshman.ui.widget.JCardView>