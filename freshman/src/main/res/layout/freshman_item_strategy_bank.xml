<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.freshman.ui.widget.JCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shadowRadius="@dimen/dp_8">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        tools:layout_height="89dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@color/freshman_strategy_describe2_light"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:riv_corner_radius="@dimen/dp_6" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_toEndOf="@+id/iv_img"
            android:textColor="@color/freshman_strategy_describe2"
            android:textSize="@dimen/sp_14"
            tools:text="15栋菜鸟驿站" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/freshman_strategy_describe2_light"
            android:layout_toRightOf="@+id/iv_img"
            android:layout_toEndOf="@+id/iv_img"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_12"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/sp_8"
            app:autoSizeMaxTextSize="@dimen/sp_12"
            tools:text="圆通、韵达都在此处领取。快递领 取时间为9：00-20：30" />

    </RelativeLayout>
</com.mredrock.cyxbs.freshman.ui.widget.JCardView>