<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.strategy.SameStrategyMVPActivity">

    <include
        layout="@layout/freshman_include_toolbar"
        android:id="@+id/toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_dormitory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="#fff"
        app:tabSelectedTextColor="@color/freshman_btn_blue"
        app:tabTextColor="@color/freshmen_finish_black"
        android:textColor="@color/freshman_strategy_describe" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dormitory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_dormitory" />

</RelativeLayout>