<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JCardView">
        <attr name="leftRadius" format="dimension" />
        <attr name="topRadius" format="dimension" />
        <attr name="rightRadius" format="dimension" />
        <attr name="bottomRadius" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="hideLeftShadow" format="boolean" />
        <attr name="hideTopShadow" format="boolean" />
        <attr name="hideRightShadow" format="boolean" />
        <attr name="hideBottomShadow" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleProcessView">
        <attr name="circleNumber" format="integer" />
        <attr name="colors" format="reference" />
        <attr name="processes" format="reference" />
        <attr name="animatorTime" format="integer" />
    </declare-styleable>
    <!--colors和processes都通过arrays来加-->

    <declare-styleable name="RectProcessView">
        <attr name="number" format="integer" />
        <attr name="processColor" format="reference" />
        <attr name="processNumber" format="reference" />
        <attr name="time" format="integer" />
        <attr name="maxNum" format="integer" />
        <attr name="subjectName" format="reference" />
    </declare-styleable>
</resources>