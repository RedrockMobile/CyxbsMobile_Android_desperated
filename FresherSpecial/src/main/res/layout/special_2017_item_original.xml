<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/original_layout"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <com.mredrock.freshmanspecial.units.MyImageView
            android:id="@+id/img_original"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundHeight="5dp"
            app:roundWidth="5dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <com.mredrock.freshmanspecial.units.MyImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundHeight="5dp"
            app:roundWidth="5dp"
            android:background="#56000000"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/special_2017_play"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/time_original"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            android:text="00:00"
            android:gravity="center"
            android:background="@drawable/special_2017_shape_time"/>
    </FrameLayout>

    <TextView
        android:id="@+id/title_original"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:text="《重邮》"
        android:textSize="13dp"/>

</LinearLayout>